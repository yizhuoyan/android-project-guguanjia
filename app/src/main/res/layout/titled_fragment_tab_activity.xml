<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ggj="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
   <com.chinasofti.guguanjia.views.TitleView
       android:id="@+id/mElecTitleView"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
   </com.chinasofti.guguanjia.views.TitleView>

    <com.chinasofti.guguanjia.views.TitleIndicator
        android:id="@+id/pagerindicator"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@mipmap/img_bg"

        ggj:footerColor="@color/greenColor"
        ggj:footerLineHeight="1dp"
        ggj:footerTriangleHeight="2.0dp"
        ggj:indicatorTextColor="@color/blank"
        ggj:selectTextColor="@color/greenColor"
        ggj:textSizeNormal="@dimen/common_text_size_middle_2"
        ggj:textSizeSelected="@dimen/select_text_size_middle_2" />

    <com.chinasofti.guguanjia.views.ViewPagerCompat
        android:id="@+id/pager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:duplicateParentState="true" />

</LinearLayout>